{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "no-undef": "error",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "curly": "error",
    "brace-style": ["error", "1tbs"],
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "no-trailing-spaces": "error",
    "comma-dangle": ["error", "never"],
    "no-multiple-empty-lines": ["error", { "max": 2 }]
  }
}
